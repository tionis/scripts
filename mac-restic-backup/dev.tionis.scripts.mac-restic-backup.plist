<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>dev.tionis.scripts.mac-restic-backup</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/Users/mom/.cargo/bin</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/mom/.cargo/bin/uv</string> 
        <string>run</string>
        <string>/Users/mom/.local/bin/backup_macos.py</string>
    </array>

    <key>StartInterval</key>
    <integer>3600</integer>

    <key>AbandonProcessGroup</key>
    <true/>
</dict>
</plist>
